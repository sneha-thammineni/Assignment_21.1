<div class="jumbotron text-center">
    <h1>All Employees</h1>
</div>

<% if (success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Designation</th>
        </tr>
    </thead>
    <tbody>
        
        <% for (var employee of employees) { %>
            <tr>
                <td><%= employee.name %></td>
                <td><%= employee.designation %></td>
            </tr>
        <% } %>

    </tbody>
</table>